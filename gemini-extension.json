{
  "name": "sql-server",
  "version": "0.1.5",
  "description": "Connect to SQL Server",
  "mcpServers": {
    "sql_server": {
      "command": "${extensionPath}${/}toolbox",
      "args": [
        "--prebuilt",
        "mssql",
        "--stdio"
      ]
    }
  },
  "contextFileName": "SQL-SERVER.md",
  "settings": [
    {
      "name": "Host",
      "description": "Host or IP address of the SQL Server",
      "envVar": "MSSQL_HOST"
    },
    {
      "name": "Port",
      "description": "Port number of the SQL Server",
      "envVar": "MSSQL_PORT"
    },
    {
      "name": "Database",
      "description": "Name of the database",
      "envVar": "MSSQL_DATABASE"
    },
    {
      "name": "User",
      "description": "Username of the database user",
      "envVar": "MSSQL_USER"
    },
    {
      "name": "Password",
      "description": "Password of the database user",
      "envVar": "MSSQL_PASSWORD",
      "sensitive": true
    }
  ]
}
